# ============================================
# OASIS - Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================
# DATABASE CONFIGURATION (Server-only)
# ============================================
# PostgreSQL connection string
# Scope: Server-side only (used in API routes, server components)
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/oasis_db

# Database connection pool settings (optional)
# Scope: Server-side only
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# REDIS CONFIGURATION (Server-only)
# ============================================
# Redis connection URL for caching and session storage
# Scope: Server-side only
# Example: redis://localhost:6379 or redis://:password@host:6379
REDIS_URL=redis://localhost:6379

# Redis connection password (if required)
# Scope: Server-side only
REDIS_PASSWORD=

# ============================================
# AUTHENTICATION & SECURITY (Server-only)
# ============================================
# JWT secret for token signing and verification
# Scope: Server-side only (CRITICAL: must be kept secret)
# Generate a strong random string (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time (in seconds)
# Scope: Server-side only
JWT_EXPIRES_IN=86400

# Session secret for cookie encryption
# Scope: Server-side only (CRITICAL: must be kept secret)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# ============================================
# API KEYS & EXTERNAL SERVICES (Server-only)
# ============================================
# External API keys (add as needed for your services)
# Scope: Server-side only
# API_KEY_ANALYTICS=
# API_KEY_EMAIL_SERVICE=

# ============================================
# NEXT.JS BUILD CONFIGURATION
# ============================================
# Next.js environment (development, staging, production)
# Scope: Both server and client (build-time)
NODE_ENV=development

# ============================================
# CLIENT-SAFE VARIABLES (Exposed to Browser)
# ============================================
# IMPORTANT: Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Only use this prefix for non-sensitive configuration values

# API base URL for client-side requests
# Scope: Client-side (exposed to browser via NEXT_PUBLIC_)
# Example: http://localhost:3000/api or https://api.oasis.org
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application version (for debugging/logging)
# Scope: Client-side (exposed to browser)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature flags (optional)
# Scope: Client-side (exposed to browser)
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# ============================================
# DOCKER & DEPLOYMENT (Server-only)
# ============================================
# Port for Next.js server (default: 3000)
# Scope: Server-side only
PORT=3000

# Docker network configuration (optional)
# Scope: Server-side only
# DOCKER_NETWORK=oasis-network